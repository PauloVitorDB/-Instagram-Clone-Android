<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Instagram.FormContainer">
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin_small</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin_small</item>
    </style>


    <style name="Theme.Instagram.FormEditTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/view_small_spacing</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin_small</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin_small</item>
    </style>

    <style name="Theme.Instagram.FormEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="Theme.Instagram.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/bg_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin_small</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin_small</item>
    </style>

    <style name="Theme.Instagram.ViewLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_border</item>
    </style>

    <style name="Theme.Instagram.TextViewBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>