<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Instagram.FormContainer">
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin_small</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin_small</item>
    </style>


    <style name="Theme.Instagram.FormEditTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/view_small_spacing</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin_small</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin_small</item>
    </style>

    <style name="Theme.Instagram.FormEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="Theme.Instagram.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/bg_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Theme.Instagram.Button.Form">
        <item name="android:layout_marginBottom">@dimen/view_small_spacing</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin_small</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin_small</item>
    </style>

    <style name="Theme.Instagram.ViewLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_border</item>
    </style>

    <style name="Theme.Instagram.TextViewBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.Instagram.TextViewBase.Form">
        <item name="android:layout_marginBottom">@dimen/view_small_spacing</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin_small</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin_small</item>
    </style>

    <style name="Theme.Instagram.TextView.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.Instagram.TextView.Title.Form">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">@dimen/view_small_spacing</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin_small</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin_small</item>
    </style>

    <style name="Theme.Instagram.SubTitle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.Instagram.SubTitle.Form">
        <item name="android:textAlignment">center</item>
        <item name="android:paddingStart">@dimen/subtitle_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/subtitle_horizontal_padding</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin_small</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin_small</item>
        <item name="android:layout_marginBottom">@dimen/view_small_spacing</item>
    </style>

    <style name="Theme.Instagram.ProgressBarDefault">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:elevation">2dp</item>
        <item name="android:indeterminateTint">@color/white</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Theme.Instagram.ButtonLink" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/blue_enabled</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>"
    </style>

</resources>