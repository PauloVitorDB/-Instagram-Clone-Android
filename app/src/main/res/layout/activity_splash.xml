<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".splash.view.SplashActivity">

    <ImageView
        android:id="@+id/image_view_splash_icon"
        android:src="@drawable/ic_instagram"
        android:alpha="0"
        tools:alpha="1"
        android:layout_height="@dimen/splash_screen_icon_height"
        android:layout_width="@dimen/splash_screen_icon_width"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/image_view_from"
    />

    <ImageView
        android:id="@+id/image_view_from"
        android:src="@drawable/ic_from"
        android:layout_width="164dp"
        android:layout_height="82dp"
        android:alpha="0"
        tools:alpha="1"
        android:scaleType="centerCrop"
        android:layout_gravity="bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@null"
    />

</androidx.constraintlayout.widget.ConstraintLayout>